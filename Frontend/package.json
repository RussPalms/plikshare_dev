{
  "name": "plikshare",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --output-path=../PlikShare/wwwroot",
    "watch": "ng build --watch --configuration development --output-path=../PlikShare/wwwroot",
    "build-prod": "ng build --configuration production --output-path=./dist",
    "build-prod-dev": "ng build --configuration production --output-path=../PlikShare/wwwroot",
    "update": "ng update @angular/cli @angular/core",
    "build-elements-prod": "ng run PlikShare:build-elements:production --output-path=./dist/browser/elements && node merge-elements.js \"./dist/browser/elements\"",
    "build-elements-prod-dev": "ng run PlikShare:build-elements:production --output-path=../PlikShare/wwwroot/browser/elements && node merge-elements.js \"../PlikShare/wwwroot/browser/elements\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.5",
    "@angular/cdk": "^19.2.8",
    "@angular/common": "^19.2.5",
    "@angular/compiler": "^19.2.5",
    "@angular/core": "^19.2.5",
    "@angular/elements": "^19.2.5",
    "@angular/forms": "^19.2.5",
    "@angular/localize": "^19.2.5",
    "@angular/material": "^19.2.8",
    "@angular/platform-browser": "^19.2.5",
    "@angular/platform-browser-dynamic": "^19.2.5",
    "@angular/router": "^19.2.5",
    "@lexical/history": "^0.27.2",
    "@lexical/markdown": "^0.27.2",
    "@lexical/react": "^0.27.2",
    "@lexical/rich-text": "^0.27.2",
    "@lexical/utils": "^0.27.2",
    "@popperjs/core": "^2.11.8",
    "base-x": "^5.0.1",
    "clipboard": "^2.0.11",
    "dompurify": "^3.2.4",
    "exifr": "^7.1.3",
    "lexical": "^0.27.2",
    "marked": "^15.0.7",
    "mermaid": "^11.4.1",
    "ngx-markdown": "^19.1.0",
    "ngx-toastr": "^19.0.0",
    "protobufjs": "^7.4.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.6",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.5",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concat": "^1.0.3",
    "fs-extra": "^11.3.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.2"
  }
}
